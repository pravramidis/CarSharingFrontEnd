<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/backToFilters"
        >


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:id="@+id/resultPhoto"
                android:textColor="@color/black"
                android:text="Photo"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:id="@+id/resultModel"
                android:clickable="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Model"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:id="@+id/resultBrand"
                android:clickable="true"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Brand"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:id="@+id/resultPrice"
                android:clickable="true"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Price"
                android:contextClickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:id="@+id/resultDistance"
                android:clickable="true"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:contextClickable="true"
                android:text="Distance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            </TableRow>


            <!-- Data Rows (Populated Dynamicall) -->

        </TableLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id = "@+id/results_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToFilters"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:layout_height="60dp"
        android:text="Back To Filters"
        app:cornerRadius="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/results_guide"
        android:layout_marginTop="32dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>