<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timer_back">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Pay for your trip"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:cardCornerRadius="28dp"
            android:id="@+id/card_view"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/finalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  55.99 $  "
                android:background="@color/myPrimary"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trip Duration:"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/durationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="00:22:45"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selected Rate:"
                    android:textColor="@color/myPrimary"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0.15$/min"
                    android:textColor="@color/myPrimary"
                    android:textSize="20sp" />
            </TableRow>

                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Added Penalty:"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/penaltyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="0 â‚¬"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Plate Number:"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/plateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GR8877"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Car Brand:"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/brandText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="SUV"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>
                    <TextView

                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Car Model:"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/modelText"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gas"
                        android:textColor="@color/myPrimary"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        />
                </TableRow>


            </TableLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPay"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"
        android:layout_height="60dp"
        android:text="Pay now"
        app:cornerRadius="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/myPrimary"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>